rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Users collection
    match /users/{userId} {
      // Users can read and write their own document
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // Projects collection
    match /projects/{projectId} {
      // Helper function to check if user is owner or collaborator
      function isOwnerOrCollaborator() {
        return resource.data.ownerEmail == request.auth.token.email ||
               request.auth.token.email in resource.data.get('collaborators', []) ||
               resource.data.ownerId == request.auth.uid ||
               request.auth.uid in resource.data.get('collaboratorIds', []);
      }

      // Projects are created via Stripe webhook (server-side), not client-side
      // So we don't allow direct client creation
      allow create: if false;

      // Allow reading documents only if user is owner or collaborator
      // This filters individual gets AND documents returned in list queries
      allow read: if isSignedIn() && (
        resource.data.ownerId == request.auth.uid ||
        request.auth.uid in resource.data.get('collaboratorIds', [])
      );

      // Allow list queries only for authenticated users with reasonable limits
      // Individual documents in results are still filtered by the read rule above
      allow list: if isSignedIn() &&
                     request.query.limit <= 100;

      // Owner and collaborators can update, but cannot change ownership
      allow update: if isSignedIn() &&
                      isOwnerOrCollaborator() &&
                      // Prevent changing the owner
                      request.resource.data.ownerEmail == resource.data.ownerEmail &&
                      request.resource.data.ownerId == resource.data.ownerId;

      // Only owner can delete
      allow delete: if isSignedIn() &&
                      resource.data.ownerEmail == request.auth.token.email;
    }

    // Pro waitlist collection
    match /proWaitlist/{docId} {
      // Anyone can add to waitlist (no auth required for better UX)
      // But cannot read, update, or delete (privacy)
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
