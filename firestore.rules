rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    // Users collection
    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // Projects collection
    match /projects/{projectId} {
      // Check if user is admin or active collaborator
      function isAdminOrCollaborator() {
        return resource.data.admin == request.auth.uid ||
               resource.data.collaborators[request.auth.uid] != null;
      }

      // Projects are created via Stripe webhook (server-side)
      allow create: if false;

      // Allow read if user is admin or collaborator
      allow read: if isSignedIn() && isAdminOrCollaborator();

      // Allow list queries for authenticated users
      allow list: if isSignedIn() && request.query.limit <= 100;

      // Admin and collaborators can update, but cannot change admin
      allow update: if isSignedIn() &&
                      isAdminOrCollaborator() &&
                      request.resource.data.admin == resource.data.admin;

      // Only admin can delete
      allow delete: if isSignedIn() &&
                      resource.data.admin == request.auth.uid;
    }

    // Pro waitlist collection
    match /proWaitlist/{docId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
